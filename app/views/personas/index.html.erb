<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <h1>Registro Alumnos</h1>

      <%= link_to 'Nuevo Alumno', new_persona_path, class: 'btn btn-primary btn-lg' %>

      <table class="table">
        <thead>
          <tr>
            <th>Rut</th>
            <th>Nombre Completo</th>
            <th>Cantidad Almuerzos</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
            <% @personas.each do |persona| %>
              <tr>
                <td><%= persona.rut %></td>
                <td><%= persona.nombre %></td>
                <td><%= persona.cantidad %></td>
                <td><%= link_to 'Show', persona %></td>
                <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
                <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>

        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
